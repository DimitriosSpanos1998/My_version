{
  "asyncapi": "2.6.0",
  "info": {
    "title": "Chat Notifications API",
    "version": "1.0.0",
    "description": "Relays events for a team collaboration chat application."
  },
  "servers": {
    "production": {
      "url": "wss://chat.example.com/stream",
      "protocol": "ws"
    }
  },
  "defaultContentType": "application/json",
  "channels": {
    "conversations.{conversationId}.messages": {
      "parameters": {
        "conversationId": {
          "schema": {
            "type": "string"
          }
        }
      },
      "publish": {
        "summary": "Broadcasts newly sent messages for a conversation.",
        "message": {
          "name": "ChatMessage",
          "payload": {
            "type": "object",
            "properties": {
              "messageId": {
                "type": "string"
              },
              "senderId": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "sentAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      }
    }
  }
}
